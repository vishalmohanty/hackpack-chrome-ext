{
  "manifest_version": 3,
  "name": "Is The Website Secure?",
  "version": "1.0",
  "description": "Website Security Chrome Extension @ TreeHacks 2019",
  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "homepage_url": "https://github.com/vishalmohanty/hackpack-chrome-ext",
  "permissions": ["storage"],
  "host_permissions": ["https://haveibeenpwned.com/api/v3/*"],
  "action": {
    "default_icon": "assets/icon-128.png",
    "default_title": "Is The Website Secure?",
    "default_popup": "src/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["/src/content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "src/background.js"
  }
}
